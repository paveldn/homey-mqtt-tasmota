{
    "id":"com.paveld.tasmota",
    "version":"0.4.6",
    "compatibility":">=2.0.0",
    "sdk":2,
    "brandColor":"#42A3E9",
    "name":{
        "en":"Tasmota MQTT"
    },
    "description":{
        "en":"Adding support for tasmota devices through MQTT"
    },
    "category":[
        "appliances"
    ],
    "tags":{
        "en":[
            "tasmota",
            "sonoff"
        ]
    },
    "permissions":[
        "homey:app:nl.scanno.mqtt"
    ],
    "images":{
        "large":"/assets/images/large.png",
        "small":"/assets/images/small.png"
    },
    "author":{
        "name":"Pavlo Dudnytskyi",
        "email":"paveldudn@gmail.com"
    },
    "contributors":{
        "developers":[
            {
                "name":"Pavlo Dudnytskyi",
                "email":"paveldudn@gmail.com"
            }
        ]
    },
    "source":"https://github.com/paveldn/homey-mqtt-tasmota",
    "bugs":{
        "url":"https://github.com/paveldn/homey-mqtt-tasmota/issues"
    },
    "homeyCommunityTopicId":26164,
    "contributing":{
        "donate":{
            "paypal":{
                "username":"truemark"
            }
        }
    },
    "capabilities":{
        "measure_power_factor":{
            "type":"number",
            "title":{
                "en":"Power factor"
            },
            "uiComponent":"sensor",
            "getable":true,
            "setable":false,
            "icon":"assets/mobile/power_factor.svg"
        },
        "measure_power_reactive":{
            "type":"number",
            "title":{
                "en":"Reactive Power"
            },
            "uiComponent":"sensor",
            "getable":true,
            "setable":false,
            "units":{
                "en":"VAr"
            },
            "icon":"assets/mobile/power_power.svg"
        },
        "measure_apparent_power":{
            "type":"number",
            "title":{
                "en":"Apparent Power"
            },
            "uiComponent":"sensor",
            "getable":true,
            "setable":false,
            "units":{
                "en":"VA"
            },
            "icon":"assets/mobile/power_power.svg"
        },
        "meter_energy_today":{
            "type":"number",
            "title":{
                "en":"Power Meter Today"
            },
            "uiComponent":"sensor",
            "getable":true,
            "setable":false,
            "units":{
                "en":"kWh"
            },
            "icon":"assets/mobile/power_meter.svg"
        },
        "meter_energy_yesterday":{
            "type":"number",
            "title":{
                "en":"Power Meter Yesterday"
            },
            "uiComponent":"sensor",
            "getable":true,
            "setable":false,
            "units":{
                "en":"kWh"
            },
            "icon":"assets/mobile/power_meter.svg"
        },
        "switch":{
            "type":"boolean",
            "title":{
                "en":"Switch"
            },
            "getable":true,
            "setable":true,
            "uiComponent":"toggle",
            "uiQuickAction":false
        },
        "onoff":{
            "type":"boolean",
            "title":{
                "en":"Switch"
            },
            "getable":true,
            "setable":true,
            "uiComponent":null,
            "uiQuickAction":true
        }
    },
    "drivers":[
        {
            "id":"tasmota_mqtt",
            "name":{
                "en":"Tasmota device"
            },
            "class":"socket",
            "capabilities":[

            ],
            "images":{
                "large":"/drivers/tasmota_mqtt/assets/images/large.png",
                "small":"/drivers/tasmota_mqtt/assets/images/small.png"
            },
            "pair":[
                {
                    "id":"list_devices",
                    "template":"list_devices",
                    "navigation":{
                        "next":"add_devices"
                    },
                    "options":{
                        "singular":false
                    }
                },
                {
                    "id":"add_devices",
                    "template":"add_devices"
                }
            ],
            "settings":[
                {
                    "type":"group",
                    "label":"Settings",
                    "children":[
                        {
                            "type":"group",
                            "label":"MQTT",
                            "children":[
                                {
                                    "id":"mqtt_topic",
                                    "type":"text",
                                    "label":{
                                        "en":"Device MQTT topic"
                                    },
                                    "value":"",
                                    "pattern":"^[^#+\\/]+$"
                                },
                                {
                                    "id":"update_interval",
                                    "type":"number",
                                    "label":{
                                        "en":"Update interval"
                                    },
                                    "value":5,
                                    "min":3,
                                    "max":20,
                                    "units":{
                                        "en":"min"
                                    }
                                },
                                {
                                    "id":"swap_prefix_topic",
                                    "type":"checkbox",
                                    "label":{
                                        "en":"Swap prefix and topic"
                                    },
                                    "value":false
                                }
                            ]
                        },
                        {
                            "type":"group",
                            "label":"Device",
                            "children":[
                                {
                                    "id":"relays_number",
                                    "type":"label",
                                    "label":{
                                        "en":"Number of relays"
                                    },
                                    "value":"1"
                                },
                                {
                                    "id":"pwr_monitor",
                                    "type":"label",
                                    "label":{
                                        "en":"Power monitoring"
                                    },
                                    "value":"No"
                                },
                                {
                                    "id":"chip_type",
                                    "type":"label",
                                    "label":{
                                        "en":"Hardware"
                                    },
                                    "value":"Unknown"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "flow":{
        "triggers":[
            {
                "id":"device_connection_changed",
                "title":{
                    "en":"Device aviability status changed"
                },
                "tokens":[
                    {
                        "name":"name",
                        "type":"string",
                        "title":{
                            "en":"Device name"
                        },
                        "example":"Device 1"
                    },
                    {
                        "name":"device_id",
                        "type":"string",
                        "title":{
                            "en":"Device ID"
                        },
                        "example":"DVES_123456"
                    },
                    {
                        "name":"status",
                        "type":"boolean",
                        "title":{
                            "en":"Aviability"
                        },
                        "example":"true"
                    }
                ]
            },
            {
                "id":"measure_power_factor_changed",
                "title":{
                    "en":"Power factor changed"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=measure_power_factor"
                    }
                ],
                "tokens":[
                    {
                        "name":"value",
                        "type":"number",
                        "title":{
                            "en":"Power factor"
                        }
                    }
                ]
            },
            {
                "id":"measure_power_reactive_changed",
                "title":{
                    "en":"Reactive power changed"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=measure_power_reactive"
                    }
                ],
                "tokens":[
                    {
                        "name":"value",
                        "type":"number",
                        "title":{
                            "en":"Reactive power"
                        }
                    }
                ]
            },
            {
                "id":"measure_apparent_power_changed",
                "title":{
                    "en":"Apparent power changed"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=measure_apparent_power"
                    }
                ],
                "tokens":[
                    {
                        "name":"value",
                        "type":"number",
                        "title":{
                            "en":"Apparent power"
                        }
                    }
                ]
            },
            {
                "id":"meter_energy_today_changed",
                "title":{
                    "en":"Today's power meter changed"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=meter_energy_today"
                    }
                ],
                "tokens":[
                    {
                        "name":"value",
                        "type":"number",
                        "title":{
                            "en":"Today's power meter"
                        }
                    }
                ]
            },
            {
                "id":"multiplesockets_relay_state_changed",
                "title":{
                    "en":"Socket status changed"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=multiplesockets"
                    },
                    {
                        "name":"socket_id",
                        "type":"autocomplete",
                        "placeholder":{
                            "en":"Select one of the values"
                        }
                    },
                    {
                        "name":"state",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"state_any",
                                "label":{
                                    "en":"toggled"
                                }
                            },
                            {
                                "id":"state_on",
                                "label":{
                                    "en":"turned on"
                                }
                            },
                            {
                                "id":"state_off",
                                "label":{
                                    "en":"turned off"
                                }
                            }
                        ]
                    }
                ],
                "tokens":[
                    {
                        "name":"socket_index",
                        "type":"number",
                        "title":{
                            "en":"Socket index"
                        },
                        "example":2
                    },
                    {
                        "name":"socket_state",
                        "type":"boolean",
                        "title":{
                            "en":"Socket state"
                        }
                    }
                ]
            },
            {
                "id":"singlesocket_relay_state_changed",
                "title":{
                    "en":"Socket status changed"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=singlesocket"
                    },
                    {
                        "name":"state",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"state_any",
                                "label":{
                                    "en":"toggled"
                                }
                            },
                            {
                                "id":"state_on",
                                "label":{
                                    "en":"turned on"
                                }
                            },
                            {
                                "id":"state_off",
                                "label":{
                                    "en":"turned off"
                                }
                            }
                        ]
                    }
                ],
                "tokens":[
                    {
                        "name":"socket_state",
                        "type":"boolean",
                        "title":{
                            "en":"Socket state"
                        }
                    }
                ]
            }
        ],
        "conditions":[
            {
                "id":"multiplesockets_switch_turned_on",
                "title":{
                    "en":"Socket state is !{{on|off}}"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=multiplesockets"
                    },
                    {
                        "name":"socket_id",
                        "type":"autocomplete",
                        "placeholder":{
                            "en":"Select one of the values"
                        }
                    }
                ]
            },
            {
                "id":"multiplesockets_all_switches_turned_on",
                "title":{
                    "en":"!{{All sockets are turned on|Some sockets are turned off}}"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=multiplesockets"
                    }
                ]
            },
            {
                "id":"multiplesockets_some_switches_turned_on",
                "title":{
                    "en":"!{{Some sockets are turned on|All sockets are turned off}}"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=multiplesockets"
                    }
                ]
            },
            {
                "id":"singlesocket_switch_turned_on",
                "title":{
                    "en":"Socket state is !{{on|off}}"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=singlesocket"
                    }
                ]
            }
        ],
        "actions":[
            {
                "id":"multiplesockets_switch_action",
                "title":{
                    "en":"Change socket(s) state"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=multiplesockets"
                    },
                    {
                        "name":"socket_id",
                        "type":"autocomplete",
                        "placeholder":{
                            "en":"Select one of the values"
                        }
                    },
                    {
                        "name":"state",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"state_on",
                                "label":{
                                    "en":"turn on"
                                }
                            },
                            {
                                "id":"state_off",
                                "label":{
                                    "en":"turn off"
                                }
                            },
                            {
                                "id":"state_toggle",
                                "label":{
                                    "en":"toggle"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "id":"singlesocket_switch_action",
                "title":{
                    "en":"Change socket state"
                },
                "args":[
                    {
                        "name":"device",
                        "type":"device",
                        "filter":"driver_id=tasmota_mqtt&capabilities=singlesocket"
                    },
                    {
                        "name":"state",
                        "type":"dropdown",
                        "values":[
                            {
                                "id":"state_on",
                                "label":{
                                    "en":"turn on"
                                }
                            },
                            {
                                "id":"state_off",
                                "label":{
                                    "en":"turn off"
                                }
                            },
                            {
                                "id":"state_toggle",
                                "label":{
                                    "en":"toggle"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}